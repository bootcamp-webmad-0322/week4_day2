<div class="container">

    <h1>Jugadores</h1>

    <hr>

    <div class="row">

        {{#each players}}
        <div class="col-md-4">

            <article class="card player-card">
                <img src="{{photo}}" class="card-img-top" alt="{{name}} {{lastName}}">
                <div class="card-body">
                    <h5 class="card-title">{{name}} {{lastName}}</h5>
                    <p class="card-text">{{team}}</p>
            </article>

        </div>

        {{/each}}

    </div>

    <a href="/" class="btn btn-dark">Ir a inicio</a>
</div>